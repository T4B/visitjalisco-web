{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind",
        "responsive",
        "screen"
      ]
    }],
    "unit-whitelist": ["em", "rem", "%", "px", "s", "ms", "vh", "vw", "deg"],
    "no-descending-specificity": null
  }
}
